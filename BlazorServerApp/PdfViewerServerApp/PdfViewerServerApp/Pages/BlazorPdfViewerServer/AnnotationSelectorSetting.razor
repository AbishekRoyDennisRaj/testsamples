@page "/AnnotationSelectorSetting"

@using Syncfusion.Blazor.PdfViewerServer

@using Syncfusion.Blazor.Buttons

@using Syncfusion.Blazor.PdfViewer



<SfPdfViewerServer DocumentPath="@DocumentPath" @ref="viewer" Width="100%" Height="100%" >
    <PdfViewerAnnotationSelectorSettings ResizerBorderColor="Blue" ResizerFillColor="Black" ResizerShape="Syncfusion.Blazor.PdfViewer.AnnotationResizerShape.Circle" ResizerSize=10 SelectionBorderColor="Green " SelectionBorderThickness=3 ResizerCursorType="CursorType.CrossHair" SelectorLineDashArray=@borderValue></PdfViewerAnnotationSelectorSettings>
</SfPdfViewerServer>
<div>
    @ResultString
</div>

@code {


    private string DocumentPath { get; set; } = "wwwroot/Data/pdfviewerserver/pdf-succinctly.pdf";

    SfPdfViewerServer? viewer { get; set; }
    private string ResultString = "";

    public static double[]? borderValue { get; set; } = { 10, 21, 2, 34, 52 };


}
