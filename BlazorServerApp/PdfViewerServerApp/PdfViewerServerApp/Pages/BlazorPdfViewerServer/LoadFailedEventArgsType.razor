@page "/LoadFailedEventArgsType"
@using Syncfusion.Blazor.PdfViewerServer
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.PdfViewer
@using Newtonsoft.Json.Linq
@using Newtonsoft.Json
@using Syncfusion.Blazor


        <SfPdfViewerServer DocumentPath="@DocumentPath" @ref="viewer" Height="100%" Width="100%">

    <PdfViewerEvents DocumentLoadFailed=@onDocumentLoaded />

           

        </SfPdfViewerServer>
        <div>
            @ResultString
        </div>
    
   


@code {




    private string DocumentPath { get; set; } = "wwwroot/Data/pdfviewerserver/HTTP-Succinctly-protected.pdf";
    private string ResultString = "";
    bool stopMouseOver = false;

    public SfPdfViewerServer viewer { get; set; }



    public void onDocumentLoaded(LoadFailedEventArgs value)
    {
        ResultString = $"DocumentName: {value.DocumentName}    IsPasswordRequired: {value.IsPasswordRequired}";
    }




   

    
  
    
}
