@page "/ContextMenuSetting"
@using Syncfusion.Blazor.PdfViewerServer
@using Syncfusion.Blazor.PdfViewer
@using Syncfusion.Blazor.Buttons




<SfPdfViewerServer DocumentPath="@DocumentPath" @ref="Viewer" Width="100%" Height="100%">
    <PdfViewerContextMenuSettings  ContextMenuItems="@ContextMenuItems" ContextMenuAction=Syncfusion.Blazor.PdfViewer.ContextMenuAction.RightClick EnableContextMenu=false ></PdfViewerContextMenuSettings>
</SfPdfViewerServer>

@code {

    public SfPdfViewerServer? Viewer { get; set; }
    private string DocumentPath { get; set; } = "wwwroot/Data/pdfviewerserver/pdf-succinctly.pdf";



    public List<Syncfusion.Blazor.PdfViewer.ContextMenuItem> ContextMenuItems = new List<Syncfusion.Blazor.PdfViewer.ContextMenuItem>
        {
           Syncfusion.Blazor.PdfViewer.ContextMenuItem.Cut ,

           Syncfusion.Blazor.PdfViewer.ContextMenuItem.Copy,

           Syncfusion.Blazor.PdfViewer.ContextMenuItem.Highlight,

           Syncfusion.Blazor.PdfViewer.ContextMenuItem.Comment,

           Syncfusion.Blazor.PdfViewer.ContextMenuItem.Strikethrough
        };



}