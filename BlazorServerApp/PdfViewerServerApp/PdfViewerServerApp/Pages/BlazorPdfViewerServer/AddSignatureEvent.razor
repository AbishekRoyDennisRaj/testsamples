@page "/addsignature-events"

@using Syncfusion.Blazor.PdfViewerServer

@using Syncfusion.Blazor.Buttons

@using Syncfusion.Blazor.PdfViewer



<SfPdfViewerServer DocumentPath="@DocumentPath" @ref="viewer" Width="100%" Height="100%">
 <PdfViewerEvents AddSignature="Signature" />
</SfPdfViewerServer>
<div>
    @ResultString
</div>

@code{

    private string DocumentPath { get; set; } = "wwwroot/Data/pdfviewerserver/pdf-succinctly.pdf";

    SfPdfViewerServer? viewer { get; set; }
    private string ResultString = "";

    public void Signature(AddSignatureEventArgs value)

    {

        ResultString = "";

        ResultString = " Annotation-ID: " + value.Id + " " + " Bound-Height: " + value.Bound.Height + " Bound-Width: " + value.Bound.Width + " Bound-Left: " + value.Bound.Left + " Bound-Top: " + value.Bound.Top + " Thickness: " + value.Thickness + "PageNumber: " + value.PageNumber + " " + " Opacity: " + value.Opacity + "  " + " StrokeColor: " + value.StrokeColor + " " + " Bound-Y " +" "+ value.Bound.X + " " + " Bound-X" +" "+ value.Bound.Y;

    }
}